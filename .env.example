# Example .env file - do NOT commit real secrets
# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=robbot
POSTGRES_PORT=5432

# App connection string (will be interpolated from the DB vars in .env)
# DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/robbot

# Security
SECRET_KEY=your-production-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# Python path for local tooling (ensures `src` is importable)
PYTHONPATH=src

# SMTP settings
SMTP_SENDER=no-reply@example.com
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=username
# SMTP_PASSWORD=password